<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    tools:context=".RegisterActivity">

    <!-- TODO(6)DONE: Crear un ImageView con alto 50dp y que muestre drawable logo-->
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/logo" />
    <!-- TODO(7)DONE: Crear un EditText con altura ajustable y anchura completa, con fondo drawable/edittext_background, que muestre el Email, con un margen superior de 15 dp, un padding de 10dp y como id "username"-->
    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:text="@string/username"
        android:ems="10"
        android:inputType="textEmailAddress" />
    <!-- TODO(8)DONE: Crear un EditText con altura ajustable y anchura completa, con fondo drawable/edittext_background, que muestre el Nombre completo, con un margen superior de 15 dp, un padding de 10dp y como id "fullname"-->
    <EditText
        android:id="@+id/fullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:ems="10"
        android:text="@string/full_name"
        android:inputType="textPersonName" />
    <!-- TODO(9)DONE: Crear un EditText con altura ajustable y anchura completa, con fondo drawable/edittext_background, que muestre el  nombre de usuario, con un margen superior de 15 dp, un padding de 10dp y como id "email"-->
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/prompt_email" />
    <!-- TODO(10)DONE: Crear un EditText con altura ajustable y anchura completa, de tipo password con fondo drawabel/edittext_background, que muestre la contraseña, con un margen superior de 15 dp, un padding de 10dp y como id "password"-->
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:ems="10"
        android:text="@string/password"
        android:inputType="textPassword" />
    <!-- TODO(11)DONE: Crear un Button con altura ajustable y anchura completa, con fondo drawable/button_background, con texto Registro, color de fuente blanco, fondo y margen superior 15dp -->
    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:textColor="@color/colorWhite"
        android:backgroundTint="15dp"
        android:layout_marginTop="15dp"
        android:text="Registro" />
    <!-- TODO(12)DONE: Crear un TextView con altura ajustable y anchura completa, con id "txt_login", que pregunte si tiene una cuenta ya el usuario y tenga un margen superior de 10dp -->
    <TextView
        android:id="@+id/txt_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="¿Tiene usted una cuenta ya?" />

</LinearLayout>